<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th class="col-xs-2">Name</th>
      <th class="col-xs-2">Total Albums Sold</th>
    </tr>
  </thead>
  <tbody>
    {{#each artists as |artist|}}
      <tr>
        <td class="col-xs-2">
          {{#link-to "artists/info" artist.id}}{{artist.name}}{{/link-to}}
        </td>
        <td class="col-xs-2">
          {{artist.albumsSold}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
