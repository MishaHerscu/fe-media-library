<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th class="col-xs-2">Name</th>
      <th class="col-xs-8">Artists</th>
    </tr>
  </thead>
  <tbody>
    {{#each cities as |city|}}
      {{#if city.name}}
        <tr>
          <td class="col-xs-2">
            {{#link-to "cities/info" city.id}}{{city.name}}{{/link-to}}
          </td>
          <td class="col-xs-8">
            {{#each city.artist_ids as |artist|}}
              {{artist.name}},
            {{/each}}
          </td>
        </tr>
      {{/if}}
    {{/each}}
  </tbody>
</table>
