<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th class="col-xs-3">Name</th>
      <th class="col-xs-3">Artist</th>
      <th class="col-xs-1">Year</th>
      <th class="col-xs-1">Total Sold</th>
      <th class="col-xs-4">Comments</th>
    </tr>
  </thead>
  <tbody>
    {{#each albums as |album|}}
    <tr>
      <td class="col-xs-3">
        {{#link-to "albums/info" album}}{{album.name}}{{/link-to}}
      </td>
      <td class="col-xs-3">{{album.artist_id.name}}</td>
      <td class="col-xs-1">{{album.year}}</td>
      <td class="col-xs-1">{{album.total_sold}}</td>
      <td class="col-xs-4">
        {{#each album.comment_ids as |comment|}}
          {{comment.message}},
        {{/each}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
