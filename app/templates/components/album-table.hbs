<h2 class="page-title">Albums</h2>

<br /><br />

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Year</th>
      <th>Total Sold</th>
      <th>Comments</th>
    </tr>
  </thead>
  <tbody>
    {{#each albums as |album|}}
    <tr>
      <td>{{album.name}}</td>
      <td>{{album.artist_id}}</td>
      <td>{{album.year}}</td>
      <td>{{album.total_sold}}</td>
      <td>Comments</td>
    </tr>
    {{/each}}
  </tbody>
</table>
