<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th class="col-xs-2">Name</th>
      <th class="col-xs-2">City</th>
      <th class="col-xs-2">Founding Year</th>
      <th class="col-xs-6">Albums</th>
    </tr>
  </thead>
  <tbody>
    {{#each artists as |artist|}}
    <tr>
      <td class="col-xs-2">{{artist.name}}</td>
      <td class="col-xs-2">{{artist.city_id.name}}</td>
      <td class="col-xs-2">{{artist.founding_year}}</td>
      <td class="col-xs-6">
        {{#each artist.album_ids as |album|}}
          {{album.name}},
        {{/each}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
