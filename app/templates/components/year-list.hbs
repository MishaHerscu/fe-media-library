<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th class="col-xs-2">Year</th>
      <th class="col-xs-2">Album Count</th>
    </tr>
  </thead>
  <tbody>
    {{#each years as |year|}}
      <tr>
        <td class="col-xs-2">
          {{#link-to "year-albums" year.year}}{{year.year}}{{/link-to}}
        </td>
        <td class="col-xs-2">
          {{year.count}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
