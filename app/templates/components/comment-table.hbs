<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th class="col-xs-2">Album</th>
      <th class="col-xs-2">Author</th>
      <th class="col-xs-5">Message</th>
      <th class="col-xs-1">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each comments as |comment|}}
    <tr>
      <td class="col-xs-2">{{comment.album_id.name}}</td>
      <td class="col-xs-2">{{comment.author}}</td>
      <td class="col-xs-5">
        {{#link-to "comments/info" comment.id}}{{comment.message}}{{/link-to}}
      </td>
      <td class="col-xs-1">
        <button class="btn btn-danger" {{action "delete" comment}}>
          Delete
        </button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
