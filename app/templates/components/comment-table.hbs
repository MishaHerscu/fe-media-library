<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Album</th>
      <th>Author</th>
      <th>Message</th>
    </tr>
  </thead>
  <tbody>
    {{#each comments as |comment|}}
    <tr>
      <td>{{comment.album_id}}</td>
      <td>{{comment.author}}</td>
      <td>{{comment.message}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
